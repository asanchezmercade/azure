{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualMachineInsideName": {
            "type": "string"
        },
        "virtualMachineOutsideName": {
            "type": "string"
        },
        "networkSecurityGroupInsideName": {
            "type": "string"
        },
        "networkSecurityGroupOutsideName": {
            "type": "string"
        },
        "networkSecurityGroupRules": {
            "type": "array"
        },
        "virtualNetworkInsideName": {
            "type": "string"
        },
        "virtualNetworkOutsideName": {
            "type": "string"
        },
        "subnetInsideName": {
            "type": "string"
        },
        "subnetOutsideName": {
            "type": "string"
        },
        "adminUsernameInside": {
            "type": "string"
        },
        "adminUsernameOutside": {
            "type": "string"
        },
        "adminPasswordInside": {
            "type": "secureString"
        },
        "adminPasswordOutside": {
            "type": "secureString"
        }
    },
    "variables": {
    },
    "resources": [
        {
            "apiVersion": "2016-09-01",
            "name": "VnetsDeployment",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/asanchezmercade/azure/master/azuredeployVnets.json",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "https://raw.githubusercontent.com/asanchezmercade/azure/master/azuredeployVnets.parameters.json",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "apiVersion": "2016-09-01",
            "name": "VMInsideDeployment",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/asanchezmercade/azure/master/azuredeployVM.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineInsideName')]"
                    },
                    "virtualNetwork": {
                        "value": "[parameters('virtualNetworkInsideName')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetInsideName')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsernameInside')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPasswordInside')]"
                    },
                    "networkSecurityGroupName": {
                        "value": "[parameters('networkSecurityGroupInsideName')]"
                    },
                    "networkSecurityGroupRules": {
                        "value": "[parameters('networkSecurityGroupRules')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2016-09-01",
            "name": "VMOutsideDeployment",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/asanchezmercade/azure/master/azuredeployVM.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualMachineName": {
                        "value": "[parameters('virtualMachineOutsideName')]"
                    },
                    "virtualNetwork": {
                        "value": "[parameters('virtualNetworkOutsideName')]"
                    },
                    "subnetName": {
                        "value": "[parameters('subnetOutsideName')]"
                    },
                    "adminUsername": {
                        "value": "[parameters('adminUsernameOutside')]"
                    },
                    "adminPassword": {
                        "value": "[parameters('adminPasswordOutside')]"
                    },
                    "networkSecurityGroupName": {
                        "value": "[parameters('networkSecurityGroupOutsideName')]"
                    },
                    "networkSecurityGroupRules": {
                        "value": "[parameters('networkSecurityGroupRules')]"
                    }
                }
            }
        }
    ]
}